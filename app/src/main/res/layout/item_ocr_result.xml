<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_image_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Image Path"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_extracted_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Extracted Text" />

        <TextView
            android:id="@+id/tv_detected_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detected Language" />

        <TextView
            android:id="@+id/tv_translated_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Translated Text" />
    </LinearLayout>
</androidx.cardview.widget.CardView>